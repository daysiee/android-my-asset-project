        <shape android:shape="rectangle">
            <solid android:color="#9DCAED">
            </solid>
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
    <item android:top="6dp" android:left="18dp" android:height="20dp" android:width="20dp">
