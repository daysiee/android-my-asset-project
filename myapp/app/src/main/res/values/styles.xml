<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FECD03</item>
        <item name="colorPrimaryDark">#F8F6F6</item>
        <item name="colorAccent">#C1C5C4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">#FECD03</item>
        <item name="colorPrimaryDark">#FECD03</item>
        <item name="colorAccent">#C1C5C4</item>
        <!--타이틀바 제거-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
