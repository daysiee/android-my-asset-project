<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="1050px"
        android:layout_height="1166px"
        android:src="@drawable/goalsetting">

    </ImageView>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="145dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="mGoal1"
                android:id="@+id/btn_x1.5"
                android:background="@drawable/goal_one"
                android:layout_width="248px"
                android:layout_height="248px"
                  ></Button>
            <Button
                android:layout_marginStart="15dp"
                android:onClick="mGoal2"
                android:id="@+id/btn_x2.0"
                android:background="@drawable/goal_three"
                android:layout_width="248px"
                android:layout_height="248px"></Button>
            <Button
                android:layout_marginStart="15dp"
                android:onClick="mGoal3"
                android:id="@+id/btn_x2.5"
                android:background="@drawable/goal_two"
                android:layout_width="248px"
                android:layout_height="248px"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="380dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/okBtn"
                android:background="@drawable/setset"
                android:layout_width="210px"
                android:layout_height="79px"
                android:onClick="mOk"></Button>
            <Button
                android:layout_marginStart="24dp"
                android:id="@+id/cancleBtn"
                android:background="@drawable/cancle"
                android:layout_width="210px"
                android:layout_height="79px"
                android:onClick="mOk"></Button>
        </LinearLayout>
  

</FrameLayout>
