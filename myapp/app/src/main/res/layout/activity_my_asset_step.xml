<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MyAssetStep">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_below="@+id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"

        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_goback"
        android:layout_width="21px"
        android:layout_height="28px"
        android:background="@drawable/backback"
        ></Button>
    <TextView
        android:id="@+id/title"
        android:text="tx"
        android:textColor="@color/colorKB"
        android:background="@color/colorKB"
        android:layout_width="match_parent"
        android:layout_height="77dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:text="트레이딩개발부"></TextView>

    <ImageView
        android:layout_marginStart="14dp"
        android:layout_marginTop="43dp"
        android:layout_width="682px"
        android:layout_height="91px"
        android:src="@drawable/stepstep"></ImageView>
    <ImageView
        android:id="@+id/shadow"
        android:layout_marginTop="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_menu_shadow"></ImageView>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:id="@+id/goal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_star1"
                android:layout_width="69px"
                android:layout_height="66px"
                android:src="@drawable/full_star"></ImageView>
            <ImageView
                android:id="@+id/iv_star2"
                android:layout_width="69px"
                android:layout_height="66px"
                android:src="@drawable/full_star"></ImageView>
            <ImageView
                android:id="@+id/iv_star3"
                android:layout_width="69px"
                android:layout_height="66px"
                android:src="@drawable/empty_star"></ImageView>
        </LinearLayout>

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="459px"
        android:layout_height="327px"
        android:src="@drawable/goal"></ImageView>
    </FrameLayout>

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="9.5dp"
        android:background="@mipmap/setting11"
        android:stateListAnimator="@null"></Button>


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_nowAsset"
        android:layout_below="@+id/goal"
        android:textSize="30sp"
        android:text="150,000"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"></TextView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/ll_goalChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nowAsset">
        <FrameLayout
            android:layout_below="@+id/tv_nowAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:layout_marginStart="16dp"
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_marginStart="160dp"
                android:layout_marginTop="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="75%"></TextView>
            <TextView
                android:id="@+id/tv_revePink"
                android:layout_marginTop="115dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="200dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="\n  풍선"
                android:background="@drawable/ballon"
                android:textSize="18sp"></TextView>
            <TextView
                android:id="@+id/tv_reveSky"
                android:layout_marginTop="115dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="200dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="\n  풍선"
                android:background="@drawable/ballon_sky"
                android:textSize="18sp"></TextView>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_goalChart"
        android:layout_width="1378px"
        android:layout_height="340px"
        android:src="@drawable/text"></ImageView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btn_call"
        android:layout_width="270px"
        android:layout_height="270px"
        android:background="@drawable/callcall"></Button>

    <Button
        android:layout_marginStart="50dp"
        android:id="@+id/btn_join"
        android:layout_width="270px"
        android:layout_height="270px"
        android:background="@drawable/joinjoin"></Button>
    </LinearLayout>
</RelativeLayout>

